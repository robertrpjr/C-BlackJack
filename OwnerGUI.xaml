<UserControl x:Class="CSC460BlackJack.OwnerGUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CSC460BlackJack"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid Margin="0,32,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <StackPanel x:Name="handPanel" x:FieldModifier="protected" ClipToBounds="True" Orientation="Horizontal" Grid.Column="1"/>
        </Grid>
        <TextBlock x:Name="playerBank" HorizontalAlignment="Right" TextWrapping="Wrap" Text="TextBlock" Width="104" Height="16" VerticalAlignment="Top" TextAlignment="Right"/>
        <TextBlock x:Name="playerDebt" HorizontalAlignment="Right" TextWrapping="Wrap" Text="TextBlock" Width="104" Height="16" VerticalAlignment="Top" TextAlignment="Right" Margin="0,16,0,0"/>

    </Grid>
</UserControl>
